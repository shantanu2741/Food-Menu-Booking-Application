<%= form_with model: response, url: employee_submit_response_path, local: true do |f| %>
  <div class="mb-3 form-check form-switch">
    <%= f.check_box :snacks, class: "form-check-input", id: "snacks", role: "switch" %>
    <%= f.label :snacks, "I would like snacks today", class: "form-check-label" %>
  </div>

  <div class="mb-3 form-check form-switch">
    <%= f.check_box :dinner, class: "form-check-input", id: "dinner", role: "switch" %>
    <%= f.label :dinner, "I would like dinner today", class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= f.label :chapati_count, "Chapati Count", class: "form-label" %>
    <%= f.number_field :chapati_count, min: 0, step: 1, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= f.submit "Save Preferences", class: "btn btn-primary" %>
  </div>
<% end %>
