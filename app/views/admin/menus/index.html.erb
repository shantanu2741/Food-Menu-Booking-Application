<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Manage Menus</h1>
    <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-outline-secondary' %>
  </div>

  <% if @menus.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
      <% @menus.each do |menu| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-header bg-light">
              <h5 class="card-title mb-0"><%= menu.menu_date.strftime('%A, %B %d, %Y') %></h5>
            </div>
            <div class="card-body d-flex flex-column">
              <div class="mb-3 flex-grow-1">
                <p class="card-text"><%= simple_format(truncate(menu.description, length: 150)) %></p>
              </div>
              <div class="d-flex justify-content-between align-items-end mt-3">
                <small class="text-muted">
                  <%= pluralize(menu.responses.count, 'response') %>
                </small>
                <div class="d-flex gap-2">  <!-- Changed to gap utility -->
                  <%= link_to 'Edit', edit_admin_menu_path(menu), class: 'btn btn-sm btn-primary px-3' %>
                  <%= button_to 'Delete', admin_menu_path(menu), 
                      method: :delete, 
                      data: { confirm: "Are you sure?" }, 
                      class: 'btn btn-sm btn-danger px-3' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center py-4 mb-5">
      <i class="bi bi-info-circle me-2"></i> No menus have been created yet.
    </div>
  <% end %>


</div>