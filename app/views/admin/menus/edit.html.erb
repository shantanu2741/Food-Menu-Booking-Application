<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Edit Menu</h1>
    <%= link_to "Back to Dashboard", admin_dashboard_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-light py-3">
          <h2 class="h5 mb-0">Edit Menu Details</h2>
        </div>
        
        <div class="card-body p-4">
          <%= form_with model: @menu, url: admin_menu_path(@menu), method: :patch, local: true do |f| %>
            <div class="row g-3">
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <%= f.date_field :menu_date, class: "form-control", placeholder: " " %>
                  <%= f.label :menu_date, "Menu Date", class: "form-label" %>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <div class="form-floating">
                <%= f.text_area :description, class: "form-control", placeholder: " ", style: "height: 200px" %>
                <%= f.label :description, "Menu Description", class: "form-label" %>
              </div>
              <div class="form-text">Enter the complete menu details including all meal options</div>
            </div>

            <div class="d-flex justify-content-between align-items-center border-top pt-4">
              <%= link_to "Cancel", admin_dashboard_path, class: "btn btn-outline-danger px-4" %>
              <div class="d-flex gap-3">
                <%= button_to 'Delete', admin_menu_path(@menu), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger' %>
                <%= f.submit "Update Menu", class: "btn btn-primary px-4" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>