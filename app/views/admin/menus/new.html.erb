<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Add New Menu</h2>
    <%= link_to "Back to Dashboard", admin_dashboard_path, class: "btn btn-outline-secondary" %>
  </div>

  <%= form_with model: @menu, url: admin_menus_path, local: true, html: { class: "card border-0 shadow-sm p-4 mb-5" } do |f| %>
    <div class="row g-3">
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <%= f.date_field :menu_date, class: "form-control", placeholder: " " %>
          <%= f.label :menu_date, "Menu Date", class: "form-label" %>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <div class="form-floating">
        <%= f.text_area :description, class: "form-control", placeholder: " ", style: "height: 150px" %>
        <%= f.label :description, "Menu Description", class: "form-label" %>
      </div>
      <div class="form-text">Enter the full menu details including all meal options</div>
    </div>

    <div class="d-flex justify-content-end gap-3 mt-4">
      <%= link_to "Cancel", admin_dashboard_path, class: "btn btn-outline-danger" %>
      <%= f.submit "Create Menu", class: "btn btn-success px-4 py-2" %>
    </div>
  <% end %>
</div>